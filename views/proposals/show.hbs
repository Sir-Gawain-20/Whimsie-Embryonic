<div class="row">
    <div class="col s12 m8">
        <h3>{{proposal.title}}
            <small>{{{editIcon proposal.user user proposal._id false}}}</small>
        </h3>
        <div class="card proposal">
            <div class="card-content">
                <span class="card-title">{{formatDate date 'MMMM Do YYYY, h:mm:ss a'}}</span>
                {{{proposal.body}}}
                {{!-- full story --}}
            </div>
        </div>
    </div>
    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{proposal.user.displayName}}</span>
                <img src="{{proposal.user.image}}" class="circle responsive-img img-small">
            </div>
            <div class="card-action">
                <a href="/stories/user/{{proposal.user._id}}">More Proposals From {{proposal.user.firstName}}</a>
            </div>
        </div>
    </div>
</div>