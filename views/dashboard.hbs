<h1>dashboard</h1>
<h3>Welcome {{firstName}}</h3>

{{#if proposals }}
    <table class="striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Date</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            {{#each proposals}}
                <tr>
                    <td><a href="/proposals/{{_id}}">{{title}}</a></td>
                    <td>{{formatDate createAt 'MMMM Do YYYY, h:mm:ss a'}}</td>
                    <td><span class="dash-status">{{status}}</span></td>
                    <td><a href="/proposals/edit/{{_id}}" class="btn btn-float">
                        <i class="fas fa-edit"></i>
                    </a>
                    
                    <form action="/proposals/{{_id}}" method="POST" id="delete-form">
                        <input type="hidden" name="_method" value="DELETE" />
                        
                        <button type="submit" class="btn red">
                            <i class="fas fa-trash"></i>
                        </button>
                    </form>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
{{else}}
<p>You have no proposals</p>
{{/if}}
